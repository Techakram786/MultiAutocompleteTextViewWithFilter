<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.service_provider_activity.LocalBusinessManFormActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/gradiant_bg"
        >

        <FrameLayout
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_left_arrow"
                app:tint="@color/white" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/backbtn"
            android:text="@string/localbusiness_tool"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/semi"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            />

    </RelativeLayout>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/continueLL"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/gradiant_bg"


                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profile_icon"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="0.5dp"

                    />

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/image_iv"
                    android:layout_alignStart="@+id/image_iv"
                    android:layout_alignEnd="@+id/image_iv"
                    android:layout_marginTop="-15dp">


                    <FrameLayout
                        android:id="@+id/profile_icon_click"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/image_iv"
                        android:layout_alignEnd="@+id/image_iv"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_circle"
                        android:backgroundTint="@color/white"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/main_light_color" />


                    </FrameLayout>

                </FrameLayout>



            </RelativeLayout>






            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/firstname"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/semi"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/firstname_ET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_gray_stroke_bg"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:padding="10dp"
                android:inputType="textCapWords"
                />

            <!--TODO lastname-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lastname"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/semi"
                />
            <EditText
                android:id="@+id/lastname_ET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_gray_stroke_bg"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:padding="10dp"
                android:inputType="textCapWords"
                />

            <!--TODO gender-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/gender"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/semi"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/male_cardView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="8dp"
                                android:layout_gravity="center"
                                >
                                <ImageView
                                    android:id="@+id/male_icon"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_male"
                                    app:tint="@color/txt_gray"
                                    />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/male_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/male"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:gravity="center"
                                />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/female_cardView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="8dp"
                                android:layout_gravity="center"
                                >
                                <ImageView
                                    android:id="@+id/female_icon"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_female"
                                    app:tint="@color/txt_gray"
                                    />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/female_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/female"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:gravity="center"
                                />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>



                </LinearLayout>


            </LinearLayout>

            <!--TODO Phone Number-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/phoneNumber"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/semi"
                />
            <EditText
                android:id="@+id/phoneNumber_ET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_gray_stroke_bg"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:padding="10dp"
                android:inputType="phone"
                />



            <!--TODO state and city-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/state"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/semi"
                />

            <RelativeLayout
                android:id="@+id/stateSelector"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@drawable/edit_text_gray_stroke_bg">
                <TextView
                    android:id="@+id/state_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_toStartOf="@id/stateArrow_icon"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/selectState"
                    android:gravity="center|start"

                    />

                <FrameLayout
                    android:id="@+id/stateArrow_icon"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_left_arrow"
                        android:layout_marginEnd="10dp"
                        android:rotation="270"/>
                </FrameLayout>





            </RelativeLayout>

            <!--TODO state and city-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/city"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/semi"
                />
            <RelativeLayout
                android:id="@+id/citySelector"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@drawable/edit_text_gray_stroke_bg">
                <TextView
                    android:id="@+id/city_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_toStartOf="@id/stateArrow_iicon"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/selectCity"
                    android:gravity="center|start"

                    />

                <FrameLayout
                    android:id="@+id/stateArrow_iicon"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_left_arrow"
                        android:layout_marginEnd="10dp"
                        android:rotation="270"/>
                </FrameLayout>





            </RelativeLayout>

            <!--TODO Work in -->
            <!--TODO category-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/category"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/semi"
                />
            <LinearLayout
                android:id="@+id/categoryLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_gray_stroke_bg"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:orientation="horizontal"
                >
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/category_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:civ_circle_background_color="#F6F5F5"

                        />

                </FrameLayout>
                <TextView
                    android:id="@+id/category_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:gravity="start|center"
                    android:padding="10dp"
                    />



            </LinearLayout>


            <!--TODO description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/description"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/semi"
                />
            <EditText
                android:id="@+id/des_ET"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/edit_text_gray_stroke_bg"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:padding="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"
                android:gravity="start"
                />




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:id="@+id/continueLL"
        android:visibility="gone"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/strokGray"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_txt"
            android:textColor="#fff"
            android:background="@drawable/click_effect"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/continue_btn" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>