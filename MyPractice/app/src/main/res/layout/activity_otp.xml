<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user_activity.OtpActivity">
  <RelativeLayout
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:background="@drawable/gradiant_bg"
      >


    <FrameLayout
        android:id="@+id/backbtn"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_left_arrow"
          app:tint="@color/white" />

    </FrameLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/backbtn"
        android:text="@string/otpVerification"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:fontFamily="@font/semi"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        />

  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/toolbar"
      app:layout_constraintBottom_toTopOf="@id/continueLL"
      android:padding="15dp"
      android:orientation="vertical"
      android:layout_marginTop="10dp"
      >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verifyotp"
        android:textColor="@color/black"
        android:fontFamily="@font/semi"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/wesentiton"
          android:fontFamily="@font/regular"
          android:textColor="@color/txt_gray"
          />



    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp">

      <com.chaos.view.PinView
          android:id="@+id/otp_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:cursorVisible="true"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:gravity="center"
          android:imeOptions="actionDone"
          android:inputType="number"
          android:itemBackground="@color/white"
          android:textColor="@color/black"
          android:textSize="13sp"
          app:itemCount="6"
          app:itemHeight="40dp"
          app:itemWidth="40dp"
          app:lineColor="@color/strokGray"
          app:viewType="rectangle"
          android:layout_gravity="center"
          android:importantForAutofill="yes"
          />
    </FrameLayout>


    <TextView
        android:id="@+id/otpcounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:gravity="center"
        android:textColor="@color/main_dark_color"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/otpresend_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="6"
          android:text="@string/dontReceiveOTP"
          android:gravity="end"
          />

      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:paddingStart="10dp"
          >
        <TextView
            android:id="@+id/retryOTP"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/resendOTP"
            android:textColor="@color/main_dark_color"
            />
      </FrameLayout>


    </LinearLayout>





  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      android:orientation="vertical"
      android:id="@+id/continueLL"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bysingning"
        android:gravity="center"
        android:textColor="@color/txt_gray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/strokGray"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/click_effect"
        android:clickable="true"
        >



      <TextView
          android:id="@+id/loading_txt"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="@string/verified"
          android:textColor="@color/white"
          android:textSize="16sp"
          android:fontFamily="@font/bold"
          android:gravity="center"
          android:visibility="visible"


          />

      <ProgressBar
          android:id="@+id/loading"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_centerInParent="true"
          android:theme="@style/progressBarwhite"
          android:visibility="gone"
          />

    </RelativeLayout>


  </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>